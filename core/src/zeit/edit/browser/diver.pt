<form tal:omit-tag="not:request/show_form|nothing">
  <div tal:attributes="id view/prefix">
    <fieldset tal:attributes="class view/prefix" i18n:domain="zeit.cms">

      <h2 tal:content="view/legend"
              tal:condition="view/legend"
              i18n:translate="">
        Headline
      </h2>

      <div tal:repeat="widget view/widgets"
           tal:attributes="class widget/field_css_class">
      <div class="widget"
           tal:condition="widget/reversed|nothing"
           tal:content="structure widget"/>
        <div class="label">
          <label tal:attributes="
                 cms:tooltip widget/hint;
                 for widget/name"
                 tal:content="widget/label"
                 i18n:translate="">
            Label
          </label>
          <span class="required"
                tal:condition="widget/required"
                i18n:translate=""
                >required</span>
          <div class="error"
               tal:condition="widget/error"
               tal:content="structure widget/error">
            error
          </div>
        </div>
        <div class="widget"
             tal:condition="not:widget/reversed|nothing"
             tal:content="structure widget"/>
      </div>

      <div class="form-controls" tal:condition="view/availableActions">
        <input
          tal:repeat="action view/actions"
          tal:replace="structure action/render" />
      </div>

    </fieldset>
  </div>
</form>
