<tal:block i18n:domain="zeit.cms">
  <div class="editable-area"
       tal:define="block_id string:edit-form-${view/__name__}"
       tal:attributes="id block_id">
    <div class="edit-bar">
      <a class="fold-link"
         title="Fold"
         cms:cp-module="zeit.edit.FoldBlock"
         tal:attributes="href block_id"
         i18n:attributes="title">
        <span class="action-title"
              i18n:translate="">
          Fold
        </span>
      </a>
      <span i18n:translate="" tal:content="view/title">Metadata</span>
    </div>
    <div class="block-inner">
      <tal:block replace="structure provider:zeit.edit.contents" />
    </div>
  </div>
</tal:block>
