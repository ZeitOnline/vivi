<html metal:use-macro="context/@@standard_macros/page">
  <metal:block metal:fill-slot="body">
    <head tal:replace="resource_library:zeit.xmleditor" />
    <script type="text/javascript"
      tal:content='string: editor_basepath = "${view/@@absolute_url}";' />
    <div id="xml-editor"
      xmlns="http://zeit"
      tal:content="structure view/xml_source">
    </div>
    <script type="text/javascript">
      xml_editor = new XMLEditor(editor_basepath, "xml-editor");
    </script>
  </metal:block>
</html>
