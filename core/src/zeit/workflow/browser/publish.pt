<div i18n:domain="zeit.cms"> <!-- lightbox -->
<h1 i18n:translate="">Publish</h1>

<tal:block condition="view/can_publish">
<ol id="worklist">
  <li action="publish"
      tal:attributes="cms:context context/@@absolute_url"
      i18n:translate="">Publishing</li>
  <li action="reload" i18n:translate="">Reloading</li>
</ol>

<script type="text/javascript">
  new zeit.workflow.publish.Publisher('worklist');
</script>
</tal:block>

<div id="publish.errors">
  <tal:block tal:condition="not: view/can_publish">
    <p i18n:translate="publish-preconditions-not-met">Cannot publish since preconditions for publishing are not met.</p>
  </tal:block>
</div>
</div>
