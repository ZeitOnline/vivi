<div id="publish.errors" i18n:domain="zeit.cms">
  <tal:block tal:condition="not: view/can_publish">
    <p i18n:translate="publish-preconditions-not-met">Cannot publish since preconditions for publishing are not met. <span i18n:name="name" tal:content="context/uniqueId" /></p>
    <tal:block tal:condition="view/validation_messages">
      <p i18n:translate="publish-validation-messages-header">The following validation rules did fail:</p>
      <ul>
        <li tal:repeat="message view/validation_messages" tal:content="message">Error Message</li>
      </ul>
      <a id="publish"
         class="button"
         i18n:translate=""
         tal:condition="not: view/has_validation_error"
         tal:attributes="href string:
           javascript:
             zeit.cms.current_lightbox.close();;
             zeit.cms.lightbox_form('${request/getURL}?force=true')">
        Publish anyway
      </a>
    </tal:block>
  </tal:block>
</div>