<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  xmlns:gocept="http://namespaces.gocept.com/zcml"
  xmlns:z3c="http://namespaces.zope.org/z3c"
  i18n_domain="zeit.cms">

  <include file="template.zcml" />

  <!-- Keyword widget -->
  <browser:page
    for="zope.location.interfaces.ISite"
    name="keyword-browser.html"
    class=".keyword.Tree"
    template="keyword-tree.pt"
    permission="zope.Public"
    allowed_interface="zeit.cms.browser.interfaces.ITree"
    />

  <resourceLibrary
    name="zeit.cms.KeywordsWidget"
    require="mochikit gocept.mochikit.lightbox">
    <directory source="resources" include="keywordswidget.js" />
  </resourceLibrary>

  <adapter
    for="
    zope.schema.interfaces.ITuple
    zope.schema.interfaces.IObject
    zeit.cms.content.interfaces.IKeywordInterface
    zope.publisher.interfaces.browser.IBrowserRequest"
    provides="zope.app.form.browser.interfaces.ISimpleInputWidget"
    factory=".keyword.KeywordsWidget"
    permission="zope.Public"
    />

  <adapter
    for="
    zope.schema.interfaces.ITuple
    zope.schema.interfaces.IObject
    zeit.cms.content.interfaces.IKeywordInterface
    zope.publisher.interfaces.browser.IBrowserRequest"
    provides="zope.app.form.interfaces.IDisplayWidget"
    factory=".keyword.KeywordsDisplayWidget"
    permission="zope.Public"
    />

  <browser:page
    for="zope.location.interfaces.ISite"
    name="keyword-typeahead"
    class=".keyword.TypeaheadSearch"
    template="keyword-typeahead.pt"
    permission="zope.Public"
    />


  <!-- XML tree editing widget -->
  <adapter
    for="zeit.cms.content.field.IXMLTree
    zeit.cms.browser.interfaces.ICMSLayer"
    provides=".interfaces.IXMLTreeWidget"
    factory=".widget.XMLTreeWidget"
    permission="zope.Public"
    />

  <adapter
    for="zeit.cms.content.field.IXMLSnippet
    zeit.cms.browser.interfaces.ICMSLayer"
    provides=".interfaces.IXMLSnippetWidget"
    factory=".widget.XMLSnippetWidget"
    permission="zope.Public"
    />

  <browser:page
    for="*"
    layer="zeit.cms.browser.interfaces.ICMSLayer"
    name="subnavigationupdater.json"
    class=".widget.SubNavigationUpdater"
    permission="zope.View"
    />

  <adapter factory=".related.related_content_browse_location" />
  
  <!-- Teaser copying -->
  <resourceLibrary name="zeit.cms.content.teaser"
    require="gocept.mochikit.jsclass mochikit">
    <directory source="resources" include="teaser.js" />
  </resourceLibrary>

  <resourceLibrary name="zeit.cms.content.validation"
    require="gocept.mochikit.jsclass mochikit">
    <directory source="resources" include="inputlimit.js" />
  </resourceLibrary>

  <resourceLibrary name="zeit.cms.content.dropdown"
    require="zeit.cms">
    <directory source="resources" include="dropdown.js" />
  </resourceLibrary>

  <!-- Combination widget template -->
  <view
    type="zeit.cms.browser.interfaces.ICMSLayer"
    for="zc.form.interfaces.ICombinationField"
    provides="zope.app.form.interfaces.IInputWidget"
    factory=".widget.CombinationWidget"
    permission="zope.Public"
    />

  <!-- Metadata preview for ICommonMetadata -->

  <browser:page
    for="zeit.cms.content.interfaces.ICommonMetadata"
    permission="zope.View"
    template="common_metadata_preview.pt" 
    name="metadata_preview"
    layer="zeit.cms.browser.interfaces.ICMSLayer"
    />

  
  <!-- Type change -->
  <browser:page
    for="zeit.cms.interfaces.ICMSContent"
    layer="zeit.cms.browser.interfaces.ICMSLayer"
    name="typechange-box"
    class=".typechange.TypeChange"
    template="typechange.pt"
    permission="zeit.RenameContent"
    />

  <browser:viewlet
    name="TypeChange"
    for="zeit.cms.repository.interfaces.IRepositoryContent"
    layer="zeit.cms.browser.interfaces.ICMSLayer"
    class=".typechange.MenuItem"
    manager="zeit.cms.browser.interfaces.ISecondaryContextActions"
    permission="zeit.RenameContent"
    lightbox="@@typechange-box"
    icon=""
    sort="120"
    />

</configure>
