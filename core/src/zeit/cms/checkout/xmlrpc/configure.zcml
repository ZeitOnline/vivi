<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:xmlrpc="http://namespaces.zope.org/xmlrpc"
    >

  <permission
    id="zeit.cms.ModifyContent"
    title="Notify cms about modified content "
    />

  <xmlrpc:view
    for="zope.location.interfaces.ISite"
    class=".xmlrpc.ContentModified"
    permission="zeit.cms.ModifyContent"
    methods="content_modified"
    />

</configure>
