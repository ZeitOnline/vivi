<html metal:use-macro="context/@@standard_macros/view">

  <metal:body fill-slot="body">

    <h1 tal:condition="view/label" tal:content="view/label"/>

    <div id="edit-form">
      <form action="."
        tal:attributes="action request/URL" method="post"
        class="edit-form" enctype="multipart/form-data"
        id="zc.page.browser_form">

        <div class="form-status"
          tal:define="status view/status"
          tal:condition="status">

          <div class="summary"
            i18n:translate=""
            tal:content="view/status">
            Form status summary
          </div>

          <ul class="errors" tal:condition="view/errors">
            <li tal:repeat="error view/error_views">
              <span tal:replace="structure error">Error Type</span>
            </li>
          </ul>
        </div>

        <div tal:define="groups view/groups">
          <fieldset tal:repeat="group groups"
            tal:attributes="class group/css_class">
            <legend tal:content="group/title">Kopf</legend>
            <div tal:define="widgets group/widgets">
              <metal:macro use-macro="context/@@standard_macros/render_form_widget" />
            </div>
          </fieldset>
        </div>
        
        <div id="actionsView">
          <span class="actionButtons"
            tal:condition="view/availableActions">
            <input tal:repeat="action view/actions"
              tal:replace="structure action/render"
              />
          </span>
        </div>

      </form>
    </div>
  </metal:body>
</html>
