<div tal:omit-tag=""
 i18n:domain="zeit.cms">
  <tal:messages tal:define="messages context/@@standard_macros/messages">

    <div id="messages_toggle"
         class="staticErrorText" 
         tal:attributes="class python: messages and 'haveMessages staticErrorText' or 'staticErrorText'"
         i18n:translate="notices_label">
        Notices
      </div>


    <div id="messages"
      tal:attributes="class python: messages and 'haveMessages' or 'noMessages'">
      <ul tal:condition="messages">
        <li tal:repeat="message messages"
          tal:attributes="class message/type"
          tal:content="message/message">
        </li>
      </ul>

      <p id="messages_counter" tal:condition="messages">
        <span i18n:translate="">
          Hides in
        </span>
        <span class="Counter" tal:condition="messages">
        </span>
        <span i18n:translate="">
          seconds
        </span>
      </p>
      <div class="hideText" tal:condition="messages" 
           i18n:translate="">
        hide
      </div>
    </div>

  </tal:messages>
</div>
