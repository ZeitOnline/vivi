<div
  tal:define="panel_id string:CalendarPanel;
              panel_handlers nocall:context/@@panel_handlers;
              calendar nocall:view/calendar"
  tal:attributes="class python:panel_handlers.css_class(panel_id);
                  id panel_id">

  <tal:replace replace="resource_library:zeit.calendar" />

  <h1>
    <a href="#"
      tal:attributes="href calendar/@@absolute_url">
      Kalender
    </a>
  </h1>

  <div class="PanelContent">
    <table id="panel-calendar"
      tal:define="calendar_url context/@@absolute_url">
      <thead>
        <tr>
          <th
            tal:repeat="day calendar/day_names"
            tal:content="python:day[0]">
            Mon
          </th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="week calendar/selected_month_calendar">
          <tal:day repeat="day week">
            <td tal:condition="day"
              tal:attributes="class python:day['have_events'] and 'event' or ''"
              tal:content="day/day | nothing">
            </td>
            <td tal:condition="not:day">
            </td>
          </tal:day>
        </tr>
      </tbody>
    </table> 

  </div>
</div>
