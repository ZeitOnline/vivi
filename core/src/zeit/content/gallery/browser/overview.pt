<table class="gallery"
  i18n:domain="zeit.cms">
  <tr tal:repeat="entry context/values">
    <td>
      <a href="#"
        tal:attributes="href entry/@@absolute_url">
        <img tal:replace="structure entry/thumbnail/@@index.html/tag" />
        <span i18n:translate="">
          Edit
          <span i18n:name="image-name"
            tal:replace="entry/image/__name__">01.jpg</span>
        </span>
      </a>
    </td>
    <td>
      <div class="title"
        tal:condition="entry/title"
        tal:content="entry/title">
        Title
      </div>
      <div class="text"
        tal:content="entry/text">
        Text
      </div>
    </td>
  </tr>
</table>
