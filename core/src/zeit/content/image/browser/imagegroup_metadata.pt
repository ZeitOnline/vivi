<metal:macro use-macro="context/@@standard_macros/metadata-preview">
  <metal:data fill-slot="preview">

    <div tal:content="view/metadata/title">
      Title
    </div>

    <div class="image-group-image-preview"
      tal:repeat="image view/images">
      <img tal:replace="structure image/@@thumbnail/tag" />
    </div>

  </metal:data>
</metal:macro>
