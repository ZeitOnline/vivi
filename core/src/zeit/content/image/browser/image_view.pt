<metal:use-macro use-macro="context/@@standard_macros/page">
  <metal:data fill-slot="body"
    tal:define="image nocall:context/@@index.html">

    <div id="edit-form">
      <table class="image-view-metadata">
        <tr>
          <td i18n:translate="">Type</td>
          <td tal:content="context/contentType">image/jpeg</td>
        </tr>
        <tr>
          <td i18n:translate="">Dimensions</td>
          <td>
            <span tal:replace="image/width" />x<span tal:replace="image/height" />
          </td>
        </tr>
        <tr>
          <td i18n:translate="">Expires</td>
          <td tal:content="view/metadata/expires">
            1.1.07
          </td>
        </tr>
        <tr>
          <td i18n:translate="">Volume/Year</td>
          <td>
            <span
              tal:replace="view/metadata/volume" />/<span
              tal:replace="view/metadata/year" />
          </td>
        </tr>
      </table>
      <a href="#" target="_new"
        tal:attributes="href context/@@absolute_url">
        <img tal:replace="structure context/@@preview/tag" />
      </a>
      
      <div
        tal:repeat="copyright view/metadata/copyrights"
        tal:content="string: Â©$copyright">
        Zeit online
      </div>
      <div i18n:translate="">
        Image title: <span tal:replace="view/metadata/caption" i18n:name="caption" />
      </div>
      <div i18n:translate="">
        ALT: <span tal:replace="view/metadata/alt" i18n:name="alt" />
      </div>
      <div i18n:translate="">
        Image sub text: <span tal:replace="view/metadata/caption" i18n:name="caption" />
      </div>
      <div i18n:translate="">
        Links to:
        <a
          tal:attributes="href view/metadata/links_to"
          tal:content="view/metadata/links_to"
          i18n:name="link">
          http://...
        </a>
      </div>

    </div>
  </metal:data>
</metal:use-macro>
