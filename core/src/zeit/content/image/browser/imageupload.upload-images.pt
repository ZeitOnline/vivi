<tal:block i18n:domain="zeit.cms">
<div id="edit-form">
  <form name="imageupload" enctype="multipart/form-data" class="imageupload" method="POST">
    <label class="imageupload__drop">
      <input type="file" class="imageupload__input" multiple tal:attributes="accept view/accepted_mime_types" name="files">
      <p i18n:translate="">Drag and drop image from local computer or InterRed MDB</p>
      <span class="imageupload__button imageupload__button--add" i18n:translate="">Select files</span>
    </label>
    <p>
      <label for="mdb_ids" i18n:translate="">
        Import via ID from InterRed MDB
      </label>
      <input class="imageupload__mdb-ids" type="text" name="mdb_ids" placeholder="12345, 67890, 24680">
      <button class="imageupload__button imageupload__button--add-mdb-ids">â†’</button>
    </p>
    <ul class="imageupload__gallery"></ul>
    <div id="actionsView"><button class="imageupload__button imageupload__button--submit" i18n:translate="">Select</button></div>
    <template class="imageupload__template">
        <li>
            <img/>
            <div>
              <button class="imageupload__button imageupload__button--remove" i18n:attributes="title" title="Remove"></button>
              <p class="imageupload__filename"></p>
            </div>
            <progress max=100 value=0></progress>
            <div class="imageupload__error"></div>
        </li>
    </template>
  </form>
</div>
</tal:block>
