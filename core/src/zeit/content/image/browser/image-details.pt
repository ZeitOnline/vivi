  <tal:tag tal:replace="structure string:<script type='text/javascript'>" />

    CaptionTroggle = (function ($) {

      var start = 1;
      function change_captionstate () {
        if(start != 1) {
          $(".picture_information").slideToggle("slow");
        }
        start = 0;
      }
        
      $("#foldctrl_picture_information").click(function(){
          change_captionstate();
      });

      return {
        change_captionstate : change_captionstate
      };

    })(jQuery);

    CaptionTroggle.change_captionstate();

