<div id="body" class="editable-area"
     i18n:domain="zeit.cms"
     tal:attributes="cms:url context/@@absolute_url">

  <a tal:attributes="href string:${context/@@absolute_url}/landing-zone-drop-module?block_type=region&order=top"
     i18n:translate=""
     cms:cp-module="zeit.edit.LoadAndReload">
    + Add region
  </a>

  <tal:block repeat="item context/values">
    <tal:block replace="structure item/@@contents"/>

    <a tal:attributes="href string:${context/@@absolute_url}/landing-zone-drop-module?block_type=region&order=insert-after&insert-after=${item/__name__}"
       i18n:translate=""
       cms:cp-module="zeit.edit.LoadAndReload">
      + Add region
    </a>
  </tal:block>
</div>
