<div id="body" class="editable-area"
     i18n:domain="zeit.cms"
     tal:attributes="cms:url context/@@absolute_url">

  <div class="landing-zone action-cp-region-module-droppable action-cp-region-module-movable action-cp-type-region-movable"
       tal:define="baseurl context/@@absolute_url;
                   query string:order=top"
       tal:attributes="cms:create-block-url string:${baseurl}/landing-zone-drop-module?${query};
                       cms:move-block-url string:${baseurl}/landing-zone-move?${query}"
       i18n:translate="">
  </div>

  <a tal:attributes="href string:${context/@@absolute_url}/landing-zone-drop-module?block_type=region&order=top"
     i18n:translate=""
     cms:cp-module="zeit.edit.LoadAndReload">
    + Add region
  </a>

  <tal:block repeat="item context/values">
    <tal:block replace="structure item/@@contents"/>

    <div class="landing-zone action-cp-region-module-droppable action-cp-region-module-movable action-cp-type-region-movable"
         tal:define="baseurl context/@@absolute_url;
                     query string:order=insert-after&insert-after=${item/__name__}"
         tal:attributes="cms:create-block-url string:${baseurl}/landing-zone-drop-module?${query};
                         cms:move-block-url string:${baseurl}/landing-zone-move?${query}"
         i18n:translate="">
    </div>

    <a tal:attributes="href string:${context/@@absolute_url}/landing-zone-drop-module?block_type=region&order=insert-after&insert-after=${item/__name__}"
       i18n:translate=""
       cms:cp-module="zeit.edit.LoadAndReload">
      + Add region
    </a>
  </tal:block>
</div>
