<div i18n:domain="zeit.cms" class="floating">

  <form id="lightbox.form" class="teaser-block-properties-form" 
        tal:attributes="action request/URL"
        tal:content="structure view/form"/>

  <div tal:attributes="class string:layout-chooser ${view/layout_prefix}">
    <div class="layout-inner"
         tal:repeat="layout view/layouts">
      <a 
        tal:attributes="href string:${context/@@absolute_url}/change-layout?id=${layout/token};
        class layout/css_class"
        cms:cp-module="zeit.edit.LoadAndReload">
        <img tal:attributes="src
             string:${context/++resource++zeit.content.cp}/${view/layout_prefix}-${layout/token}.png" />
        <span i18n:translate="" tal:content="layout/title" />
      </a>
    </div>
    <div class="visual-clear"></div>
  </div>

  <script language="javascript"
          tal:condition="view/close">
    self.close();
  </script>

</div>
