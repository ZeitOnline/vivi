<div xmlns:cms="http://namespaces.gocept.com/zeit-cms"
      id="cp-content-inner"
      class="cp-content-inner">

  <div class="cp-editor-top">
    <div id="cp-aufmacher">
      <div id="cp-aufmacher-inner"
           class="editable-area"
           tal:define="lead context/lead"
           tal:attributes="cms:url lead/@@absolute_url; class python:view.css_class(lead)"
           tal:content="structure lead/@@contents"/>
    </div>

    <div id="cp-informatives">
      <div id="cp-informatives-inner" class="editable-area"
           tal:define="informatives context/informatives"
           tal:attributes="cms:url informatives/@@absolute_url; class python:view.css_class(informatives)"
           tal:content="structure informatives/@@contents"/>
    </div>
  </div>

  <div id="cp-teasermosaic" class="editable-area"
       tal:define="mosaic context/teaser-mosaic"
       tal:attributes="cms:url mosaic/@@absolute_url; class python:view.css_class(mosaic)"
       tal:content="structure mosaic/@@contents">
  </div>

</div>
