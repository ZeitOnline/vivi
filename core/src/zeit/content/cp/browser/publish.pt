<div i18n:domain="zeit.cms"> <!-- lightbox -->
<h1 i18n:translate="">Publish</h1>

<tal:block condition="view/can_publish">
<ol id="worklist">
  <li action="checkin" i18n:translate="">Checking in</li>
  <li action="publish" i18n:translate="">Publishing</li>
  <li action="checkout" i18n:translate="">Checking out</li>
  <li action="reload" i18n:translate="">Reloading</li>
</ol>

<script type="text/javascript">
  new zeit.workflow.publish.Publisher('worklist');
</script>
</tal:block>

<div id="publish.errors">
  <tal:block tal:condition="not: view/can_publish">
    <p i18n:translate="">Cannot publish since validation rules are violated.</p>
    <tal:block tal:condition="view/validation_messages">
      <p i18n:translate="publish-validation-messages-header">The following validation rules did fail:</p>
      <ul>
        <li tal:repeat="message view/validation_messages" tal:content="message">Error Message</li>
      </ul>
    </tal:block>
  </tal:block>
</div>
</div>

