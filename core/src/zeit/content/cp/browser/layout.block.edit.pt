<div class="edit">
  <a class="edit-link" title="Edit"
     tal:attributes="href string:${context/@@absolute_url}/block.edit"
     i18n:attributes="title"
     cms:cp-module="LightBoxForm">
    <span class="action-title">Edit</span>
  </a>

  <a class="delete-link" title="Delete"
     tal:attributes="href string:${context/__parent__/@@absolute_url}/delete?key=${context/__name__}"
     i18n:attributes="title"
     cms:cp-module="ConfirmDelete">
    <span class="action-title">Delete</span>
  </a>
 
  <div class="dragger">
    <div class="center"></div>
  </div>

</div>
