<div id="editor-forms-actions">
  <a class="button"
     tal:attributes="href string:${context/@@absolute_url}/@@checkout"
     tal:condition="view/can_checkout"
     i18n:translate="">Edit</a>

  <a class="button"
     target="_blank"
     tal:attributes="href string:${context/@@absolute_url}/@@show_preview"
     tal:condition="not: view/can_checkout"
     i18n:translate="">Preview</a>
</div>