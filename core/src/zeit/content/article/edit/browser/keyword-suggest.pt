<fieldset id="article-content-suggest-keywords" i18n:domain="zeit.cms">

  <legend i18n:translate="">Keyword suggestions (Google news)</legend>

  <div class="ressort_keywords folded_information">
    <tal:block repeat="keyword view/ressort_keywords">
      <b tal:condition="python: keyword in view.headlines"
         tal:content="keyword"/><span
         tal:condition="python: keyword not in view.headlines"
         tal:omit-tag=""
         tal:content="keyword"/><tal:x
        replace="string:, " tal:condition="not: repeat/keyword/end"/>
    </tal:block>
  </div>

  <div class="all_keywords folded_information" style="display: none">
    <tal:block repeat="keyword view/all_keywords">
      <b tal:condition="python: keyword in view.headlines"
         tal:content="keyword"/><span
         tal:condition="python: keyword not in view.headlines"
         tal:omit-tag=""
         tal:content="keyword"/><tal:x
        replace="string:, " tal:condition="not: repeat/keyword/end"/>
    </tal:block>
  </div>

  <button class="toggle_infos folded"
          tal:content="view/show_more"
          tal:attributes="data-caption view/show_less">
  More suggestions...</button>

</fieldset>
