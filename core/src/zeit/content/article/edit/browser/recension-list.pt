<fieldset i18n:domain="zeit.cms" id="recensions">
  <div class="recensions" i18n:domain="zeit.cms"
    tal:define="can_edit python:request.interaction.checkPermission(
      'zeit.EditContent', context)">
    <link
      rel="stylesheet" type="text/css"
      tal:attributes="
      href string:${request/++resource++zeit.cms.recension}/recension.css"/>
    <div class="recension"
      tal:condition="view/recensions"
      tal:repeat="recension view/recensions">
  
      <ul id="recensionheader">
        <li i18n:translate="">Recensionentry <span>01.01.1970 | Max Mustermann</li>
        <li id="recensionactions">
            <ul>
                <li i18n:translate="">
                  <a href="#" rel="edit" title="Edit"
                    tal:condition="can_edit"
                    tal:attributes="
                    href string:${recension/url}/@@edit.html;
                    cms:lightbox-reload-url string:${context/@@absolute_url}/@@edit.form.recension-list;"
                    cms:lightbox-reload-id="recensions"
                    cms:cp-module="zeit.edit.LightBoxForm"
                    i18n:attributes="title"
                    i18n:translate="">
                    [edit]
                  </a>
                </li>
                <li i18n:translate="">
                  <a href="0" rel="remove" title="Entfernen">[remove]</a>
                </li>
            </ul>
        </li>
      </ul>


      <dl class="rensionlist">
        <tal:con condition="recension/authors">
          <dt i18n:translate="">Authors</dt>
          <dd class="authors"
            tal:content="recension/authors">
            Goethe
          </dd>
        </tal:con>

        <tal:con condition="recension/recension/title">
          <dt i18n:translate="">Title</dt>
          <dd class="title"
            tal:content="recension/recension/title">
            Faust
          </dd>
        </tal:con>

        <tal:con condition="recension/recension/location">
          <dt i18n:translate="">Location</dt>
          <dd class="location"
            tal:content="recension/recension/location">
            Zuerich
          </dd>
        </tal:con>

        <tal:con condition="recension/recension/publisher">
          <dt i18n:translate="">Publisher</dt>
          <dd class="publisher"
            tal:content="recension/recension/publisher">
            Suhrkamp
          </dd>
        </tal:con>

        <tal:con condition="recension/recension/year">
          <dt i18n:translate="">Year</dt>
          <dd class="year"
            tal:content="recension/recension/year">
            2007
          </dd>
        </tal:con>

        <tal:con condition="recension/recension/pages">
          <dt i18n:translate="">Pages</dt>
          <dd class="pages"
            tal:condition="recension/recension/pages"
            tal:content="recension/recension/pages">
            100
          </dd>
        </tal:con>

        <tal:con condition="recension/recension/price">
          <dt i18n:translate="">Price</dt>
          <dd class="price"
            tal:condition="recension/recension/price"
            tal:content="recension/recension/price">
            29,90
          </dd>
        </tal:con>
      </dl>
      <hr class="dummy" />
    </div>

    <p tal:condition="not:view/has_recensions"
      i18n:translate="recension-no-items">
      There are no book information items, yet.
    </p>

    <a href="#" title="Add"
      tal:condition="can_edit"
      tal:attributes="
      href string:${view/container/@@absolute_url}/@@add;
      cms:lightbox-reload-url string:${context/@@absolute_url}/@@edit.form.recension-list;"
      cms:lightbox-reload-id="recensions"
      cms:cp-module="zeit.edit.LightBoxForm"
      cms:lightbox-in="cp-content"
      i18n:attributes="title"
      i18n:translate="add-new-recension">
      Add new...
    </a>
  </div>
</fieldset>
