<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:grok="http://namespaces.zope.org/grok">

  <grok:grok package="." />

  <class class=".link.Link">
    <implements interface="zope.annotation.interfaces.IAttributeAnnotatable" />
    <implements interface="zeit.cms.content.interfaces.IDAVPropertiesInXML "/>
    <require
      interface=".interfaces.ILink"
      permission="zope.View"
      />
    <require
      set_schema=".interfaces.ILink"
      permission="zeit.EditContent"
      />
  </class>

  <adapter factory=".link.XMLReferenceUpdater" name="zeit.content.link" />

</configure>
