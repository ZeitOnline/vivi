<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  xmlns:zcml="http://namespaces.zope.org/zcml"
  zcml:condition="installed zc.selenium">

  <include package="zc.selenium" />

  <adapter
    factory=".test.BasicTests"
    name="zeit.imp.browser.BasicTests"
    permission="zope.Public"
    />

  <adapter
    factory=".test.CropTests"
    name="zeit.imp.browser.CropTests"
    permission="zope.Public"
    />

  <browser:page
    for="zope.location.interfaces.ISite"
    name="reset-mock-connector"
    class=".test.ResetMockConnector"
    permission="zope.Public"
    />

</configure>
