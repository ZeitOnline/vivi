<tal:block 
  i18n:domain="zeit.imp"
  tal:define="metadata context/@@metadata">
  <tal:lib replace="resource_library:zeit.imp" />

  <div id="imp-image-area" class="image-area">
    <div id="imp-image-drag">
    </div>
  </div>

  <div id="imp-mask" class="image-area">
    <img id="imp-mask-image" src="" />
  </div>

  <div id="imp-loading-image">
    <img tal:attributes="src context/++resource++zeit.imp/loading.gif" />
  </div>

  <div id="imp-metadata">
    <div id="imp-width" tal:content="view/width" />
    <div id="imp-height" tal:content="view/height" />
  </div>

  <div id="imp-zoom">
    <div id="imp-zoom-slider" class="uislider"></div>
  </div>

  <div id="imp-configuration">
    <form id="imp-configuration-form">
      <div class="widget radio-group">

        <label>
          <input type="radio" name="mask" value="450x200" />
          Aufmacher groß (450x200)
        </label>
        <label>
          <input type="radio" name="mask" value="210x210" />
          Aufmacher klein (210x210)
        </label>
        <label>
          <input type="radio" name="mask" value="410x?200" />
          Artikelbild breit (410x…)
        </label>

      </div>
      <div class="widget">
        <label>
          <input type="checkbox" name="border" value="true"/>
          1px Border
        </label>

      </div>

      <input type="button" id="imp-action-crop" name="crop" value="Crop"
        i18n:attributes="value" />

    </form>
  </div>

  <div id="imp-image-bar" />

</tal:block>
