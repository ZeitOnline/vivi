<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  xmlns:zcml="http://namespaces.zope.org/zcml"
  zcml:condition="installed zc.selenium">

  <include package="zc.selenium" />

  <adapter
    factory=".test_selenium.SeleniumBasicTests"
    name="zeit.imp.browser.BasicTests"
    permission="zope.Public"
    />

  <adapter
    factory=".test_selenium.SeleniumCropTests"
    name="zeit.imp.browser.CropTests"
    permission="zope.Public"
    />

  <adapter
    factory=".test_selenium.SeleniumMaskTests"
    name="zeit.imp.browser.MaskTests"
    permission="zope.Public"
    />

  <browser:page
    for="zope.location.interfaces.ISite"
    name="reset-mock-connector"
    class=".test_selenium.ResetMockConnector"
    permission="zope.Public"
    />

  <browser:page
    for="zope.location.interfaces.ISite"
    name="create-image-group"
    class=".test_selenium.CreateImageGroup"
    permission="zope.Public"
    />


</configure>
