<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:i18n="http://namespaces.zope.org/i18n"
  i18n_domain="zeit.imp">

  <permission
    id="zeit.imp.Use"
    title="Use IMP"
    />

  <i18n:registerTranslations directory="locales" />

  <adapter factory=".crop.Cropper" trusted="yes"/>
  <class class=".crop.Cropper">
    <require
      interface=".interfaces.ICropper"
      permission="zeit.AddContent"
      />
  </class>


</configure>

