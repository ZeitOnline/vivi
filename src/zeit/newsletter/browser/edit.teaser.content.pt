<div>

  <img tal:condition="view/image"
       tal:attributes="src view/image" />

  <div class="supertitle" tal:content="view/metadata/supertitle | nothing"/>
  <div class="teaserTitle" tal:content="view/metadata/teaserTitle | nothing"/>
  <div class="teaserText" tal:content="view/metadata/teaserText | nothing"/>

  <img tal:condition="python: not(view.image) and view.metadata.thumbnail"
       tal:attributes="src view/metadata/thumbnail" />

  <span class="uniqueId" tal:content="context/reference/uniqueId | nothing" />

</div>
