<tal:block 
  i18n:domain="zeit.cms">

  <div class="keyword-tree">
    <h1 i18n:translate="">Taxonomy</h1>
    <div class="Tree"
      tal:content="structure view/tree_template">
    </div>
  </div>

  <div class="keyword-input">
    <h1 i18n:translate="">Keywords</h1>

    <div class="suggest-keyword" i18n:translate="">
      If you would like to suggest a keyword, send an e-mail to
      <a href=""
        tal:attributes="href string:mailto:${view/suggest_email}"
        tal:content="view/suggest_name"
        i18n:name="recipient">
        Mr X
      </a>.
    </div>

    <label for="new_keyword_code" i18n:translate="">Search</label>
    <input type="text" id="new_keyword_code" name="new_keyword_code" />

  </div>

  <div class="typeahead-results">
    <h1 i18n:translate="">Similar keywords:</h1>
    <div id="keyword-typeahead-results">
    </div>
  </div>

  <div class="keyword-list">
    <h1 i18n:translate="">Keywords</h1>
    <ul id="lightbox-keyword-list">
      <!-- filled by javascript -->
    </ul>
  </div>

</tal:block>
